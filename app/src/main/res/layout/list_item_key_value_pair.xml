<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/list_item_key_value_pair_image_button_delete"
        android:layout_width="@dimen/action_bar_button_size_button"
        android:layout_height="@dimen/action_bar_button_size_button"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/action_bar_back_button_right_margin"
        android:src="@drawable/ic_remove_circle_outline_black_48dp"
        android:background="@color/color_transparent"/>

    <LinearLayout
        android:layout_toRightOf="@id/list_item_key_value_pair_image_button_delete"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_key_value_pair_text_view_key"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/list_item_text_size_primary_content"
            android:textColor="@color/text_color_dark"/>

        <TextView
            android:id="@+id/list_item_key_value_pair_text_view_value"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/list_item_text_size_primary_content"
            android:textColor="@color/text_color_dark"/>

    </LinearLayout>

</RelativeLayout>